{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Backend",
        "type": "docker",
        "request": "launch",
        "preLaunchTask": "docker-run: debug",
        "netCore": {
          "appProject": "${workspaceFolder}/Cataclysm_Website.Server/Cataclysm_Website.Backend.csproj"
        }
      },
      {
        "name": "Frontend",
        "type": "chrome",
        "preLaunchTask": "npm run dev",
        "request": "launch",
        "url": "https://localhost:5173"
      },
      {
        "name": "Docker .NET Core Attach",
        "type": "docker",
        "request": "attach",
        "platform": "netCore",
        "sourceFileMap": {
          "/Cataclysm_Website.Server": "${workspaceFolder}/Cataclysm_Website.Server"
        }
      }
    ]
  }